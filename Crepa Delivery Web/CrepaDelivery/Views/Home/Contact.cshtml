@using CrepaDelivery.Models.Helpers
@model ContactViewModel


<style>
    body {
        width: 100%;
        height: 100%;
    }


    h1, h2, h3 {
        margin: 0 0 35px 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    p {
        margin: 0 0 25px;
        font-size: 18px;
        line-height: 1.6em;
    }

    a {
        color: #26a5d3;
    }

        a:hover, a:focus {
            text-decoration: none;
            color: #26a5d3;
        }

    #contact {
        background: #dbdbdb;
        padding-bottom: 80px;
    }

    textarea.form-control {
        height: 100px;
    }
</style>

<link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<section id="contact" class="content-section text-center">
    <div class="contact-section">
        <div class="container">
            <h2>ΕΠΙΚΟΙΝΩΝΗΣΤΕ ΜΑΖΙ ΜΑΣ</h2>
            <p>Για οποιαδήποτε σχόλια, προτάσεις μπορείτε να μας στείλετε μήνυμα.</p>

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    @using (Html.BeginForm("Contact", "Home", new { }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new {})
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Γράψτε εδώ το Όνομά σας...." })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new {})
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Γράψτε εδώ το Email σας...." })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Message, new {})
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder="Γράψτε εδώ το Μήνυμα σας...."})
                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Αποστολή" class="btn btn-primary pull-right" />
                            </div>
                        </div>

                    }
                    <hr>
                    <h3>ΒΡΕΙΤΕ ΜΑΣ ΚΑΙ ΠΑΡΑΚΑΤΩ</h3>
                    <ul class="list-inline banner-social-buttons">
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a></li>
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-youtube-play"> <span class="network-name">Youtube</span></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

        </div>
</section>
